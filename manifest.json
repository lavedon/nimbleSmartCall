{
    // Required
    "manifest_version": 2,
    "name": "Smart Call Nimble",
    "version": "1.0",
    "version_name": "0.1 Pre-Alpha",
    "author": "Luke Avedon",
    "description": "Move Smart Calling informaion to the top of the CRM page.",
    "commands": {
        "scrape-profile": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Command+Shift+E"
            },
            "description": "Add opener."
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
       "128": "icon128.png"
        },
    "background" : {
        "scripts" : ["background.js"],
        "persistent" : false
    },
    "permissions": ["activeTab", "declarativeContent", "tabs"],
    "content_scripts" : [
        {
            "matches": ["https://app.nimble.com/*"],
            "js": ["contentScript.js"],
            "run_at": "document_end"
        }
    ],
    "page_action": {
        "default_icon" : "icon16.png"
    }
}
    
